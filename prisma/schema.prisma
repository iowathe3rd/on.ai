generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  clerkId   String    @unique
  email     String    @unique
  username  String    @unique
  firstName String?
  lastName  String?
  diagrams  Diagram[] // Связь с диаграммами пользователя
}

// Определение модели для диаграммы
model Diagram {
  id     String @id @default(uuid())
  name   String
  data   Json
  userId String // Внешний ключ для связи с пользователем
  user   User   @relation(fields: [userId], references: [id])
}
